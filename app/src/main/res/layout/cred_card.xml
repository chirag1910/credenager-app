<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:backgroundTint="@color/cred_card_background">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp">
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:textFontWeight="600"
                      android:textColor="@color/heading3"
                      android:id="@+id/cred_card_identifier"
                      tools:targetApi="p"/>
            <Space android:layout_width="15dp"
                   android:layout_height="match_parent"/>
            <ImageButton android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:src="@drawable/ic_edit"
                         android:tint="@color/button_primary"
                         android:background="@android:color/transparent"
                         android:id="@+id/cred_card_edit"
                         android:contentDescription="@string/cred_card_edit"/>
            <Space android:layout_width="20dp"
                   android:layout_height="match_parent"/>
            <ImageButton android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:src="@drawable/ic_delete"
                         android:tint="@color/button_primary"
                         android:background="@android:color/transparent"
                         android:id="@+id/cred_card_delete"
                         android:contentDescription="@string/cred_card_delete"/>
        </LinearLayout>

        <ImageView android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/divider"
                   android:scaleType="fitXY"
                   android:tint="@color/divider"
                   android:layout_marginHorizontal="20dp"
                   android:contentDescription="@string/divider"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="25dp">
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:textColor="@color/heading2"
                      android:id="@+id/cred_card_value"
                      android:textSize="20sp"/>
            <Space android:layout_width="15dp"
                   android:layout_height="match_parent"/>
            <ImageButton android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:src="@drawable/ic_copy"
                         android:tint="@color/button_primary"
                         android:background="@android:color/transparent"
                         android:id="@+id/cred_card_copy"
                         android:contentDescription="@string/cred_card_copy"/>
            <Space android:layout_width="20dp"
                   android:layout_height="match_parent"/>
            <ImageButton android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:src="@drawable/ic_show"
                         android:tint="@color/button_primary"
                         android:background="@android:color/transparent"
                         android:id="@+id/cred_card_lock"
                         android:contentDescription="@string/cred_card_lock"/>
        </LinearLayout>


    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="100dp" android:id="@+id/cred_card_bottom_padding" android:visibility="gone"/>
</LinearLayout>