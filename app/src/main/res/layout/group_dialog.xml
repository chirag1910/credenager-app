<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/rounded_dialog"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/group_dialog"
        android:scaleX="0"
        android:scaleY="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/group_dialog_heading"
              android:textSize="30sp"
              android:textFontWeight="600"
              android:layout_gravity="center"
              android:textColor="@color/heading1"
              android:layout_marginVertical="30dp"
              android:layout_marginHorizontal="20dp"
              tools:targetApi="p"/>

    <EditText
            android:id="@+id/group_dialog_name_edittext"
            android:importantForAutofill="no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:hint="@string/group_name"
            android:textColorHint="@color/statusText"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:inputType="textCapSentences"
            android:textCursorDrawable="@null"
            android:textFontWeight="600"
            android:maxLines="1"
            android:textColor="@color/heading2"
            android:background="@drawable/rounded_edittext"
            android:imeOptions="actionDone"
            tools:targetApi="p"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/group_dialog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="15dp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            app:backgroundTint="@color/button_primary"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:outlineSpotShadowColor="@android:color/transparent"
            tools:targetApi="p"
    />
</LinearLayout>
